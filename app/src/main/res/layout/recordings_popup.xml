<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recordingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainGreen"
        android:gravity="center"
        android:padding="10px">

    <ScrollView
            android:id="@+id/recordView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/recordingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Recording Title"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

            <TextView
                    android:id="@+id/dateRecordedLabel"
                    android:layout_width="344dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:text="Date Recorded:"
                    android:textSize="30sp" />

            <TextView
                    android:id="@+id/dateRecorded"
                    android:layout_width="344dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

            <TextView
                    android:id="@+id/fileSizeLabel"
                    android:layout_width="344dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:text="File Size:"
                    android:textSize="30sp" />

            <TextView
                    android:id="@+id/fileSize"
                    android:layout_width="344dp"
                    android:layout_height="59dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@android:color/white"
                    android:textSize="30sp" />

            <Button
                    android:id="@+id/playBtn"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="100dp"
                    android:text="Play" />

            <Button
                    android:id="@+id/closeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/navigation_drawer_close" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>